{
  "name": "GTmetrix Analyzer Plugin",
  "action": {},
  "manifest_version": 3,
  "version": "0.0.0.1",
  "description": "Turns the page red when you click the icon",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["style.css"]
    }
  ],
  "options_page": "options.html",
  "icons": {
    "128": "/icons/icon128.png"
  }
}
